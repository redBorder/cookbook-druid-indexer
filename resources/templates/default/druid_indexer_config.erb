<%# Generated by chef-client (rb-druid-indexer) %>
zookeeper_servers:
<% @zookeeper_servers.each do |server| %>
  - "<%= server %>"
<% end %>

<%# Define tasks %>
tasks:
<% @tasks.each do |task| %>
  - task_name: "<%= task[:task_name] %>"
    feed: "<%= task[:feed] %>"
    spec: "<%= task[:spec] %>"
    kafka_host: "<%= task[:kafka_host] %>"
    <% if task[:custom_dimensions] && task[:custom_dimensions].any? %>
    custom_dimensions:
      <% task[:custom_dimensions].each do |dimension| %>
        - "<%= dimension %>"
      <% end %>
    <% end %>
<% end %>